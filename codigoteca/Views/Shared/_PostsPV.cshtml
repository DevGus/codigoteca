
@model IEnumerable<codigoteca.Models.Post>

@{
    ViewBag.Title = "Index";
}

<div class="row" style="margin-top:20px;">
    <div class="col-md-6">
        <h3 style="margin:0">Últimos posteos públicos</h3>
    </div>
    <div class="col-md-6 text-right">
        <button type="button" class="btn btn-default">
            @Html.ActionLink("Crear Post", "Create")
        </button>
    </div>
</div>
<br>
<br>

<table class="table thead-light">
    <thead>
       <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDescrip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostLanguage)
        </th>
       </tr>
    </thead>

        <tbody>
            @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDescrip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDate, ("dd/MM/yyyy"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostLanguage)
            </td>
            <td>
                <a href="/Posts/Details/@item.PostId" class="btn btn-primary"> <i class="fa fa-eye"></i> </a>
            </td>
        </tr>
}
        </tbody>

</table>

