
@model IEnumerable<codigoteca.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h3>Tus grupos</h3>

<button type="button" class="btn">
    @Html.ActionLink("Crear Grupo", "Create")
</button>
<br>
<br>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupDate)
            </td>
            <td>
                @Html.ActionLink("Ver", "Details", new { id = item.GroupID })
            </td>
        </tr>
    }

</table>

