@model codigoteca.Models.Group

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<div>
    <h4>Group</h4>
    <hr />
    @if (ViewBag.isAdmin)
    {
        <p>>Admin</p>
    }
    else {
        <p>>NoAdmin</p>
            }

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GroupName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GroupName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GroupDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GroupDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.GroupID }) |
    @Html.ActionLink("Volver al listado", "Index") |
