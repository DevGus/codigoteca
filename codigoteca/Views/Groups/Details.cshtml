@if (ViewBag.groupUsers != null)
    {
<div class="form-group">
    <div class="col-md-10">
        <h3>Integrantes</h3>
        @foreach (var item in ViewBag.groupUsers)
        {
        <label for="@item.UserID" style="margin-left:10px;">@item.UserName</label>
}
    </div>
</div>
}
