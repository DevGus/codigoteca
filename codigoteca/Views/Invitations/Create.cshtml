@model codigoteca.Models.Invitation

@{
    ViewBag.Title = "Create";
}


<br>

@using (Html.BeginForm("Create", "Invitations", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enviar invitación</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h4>Invitar usuarios</h4>
        <div class="form-group groups" data-id="@ViewBag.GroupID">
            <input type="text" name="GroupId" value="@ViewBag.GroupID" hidden />
            <div class="col-md-6">
                <input class="form-control addEmail" name="addMail" id="addMail" type="email" value="" placeholder="Ingrese el email" />
                <span class="text-danger error"></span>
            </div>
            <button type="button" class="col-md-1 col-xs-3 add btn btn-primary">
                Agregar
            </button>
            <div class="clearfix"></div>
            <br />
            <div class="col-md-12">
                <h5><strong>Invitados</strong></h5>
                <div class="invited">

                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a href="/Groups" class="btn btn-primary">Volver atrás</a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/js/groups/edit.js"></script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>

    <script>
        $(function () {
            $("#addMail").autocomplete({
                source: "/Groups/BuscarPersonas"
            });
        });
    </script>
}
