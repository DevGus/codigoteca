@model IEnumerable<codigoteca.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Posts</h2>

<p>
    @Html.ActionLink("Crear nuevo post", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDescrip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostBody)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostVisibility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostLanguage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PostName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostDescrip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostBody)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostVisibility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostLanguage)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PostId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.PostId }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.PostId })
        </td>
    </tr>
}

</table>
